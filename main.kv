# ******************************** Login page *********************************'''
<LoginPage>:
    name: "login_page"

    FitImage:
        source: 'bg.jpg'
        
    MDFloatLayout:
        MDLabel:
            markup: True
            text: "[u][b][size=50]Student managment system[/u][b][/size]"
            # text: "View All Records"
            halign: "center"
            pos_hint: {"center_x":0.5,'y': .88}
            # md_bg_color: 'blue'
            theme_text_color: "Custom"
            text_color: "white"
            # adaptive_height: True
            size_hint: 1, .15
            valign: "bottom"


        

        MDBoxLayout: 
            spacing: 15
            padding: 20
            orientation: 'vertical'
            # md_bg_color: 'green'
            size_hint: 1,0.5
            # pos_hint: {'center_x': 0.5,'y': .10}
            pos_hint: {'center_x': 0.5,'top': 0.7}
            MDTextField:
                id: email
                hint_text: "Email"
                mode: "line"
                icon_left: "account"
                helper_text: "Enter email "
                helper_text_mode: "on_focus"
                line_color_focus: 'white'
                line_color_normal: '#d7d9d7'
                text_color_normal: '#d7d9d7'
                text_color_focus: 'white'
                hint_text_color_focus: 'white'
                hint_text_color_normal: '#d7d9d7'
                icon_left_color_normal: '#d7d9d7'
                icon_left_color_focus: "white"
                icon_left_color_normal: "#d7d9d7"

            


                
            MDTextField:
                id: passward
                hint_text: "Passward"
                # mode: "rectangle"
                mode: "line"
                icon_left: "lock-off"
                helper_text: "Enter passward"
                helper_text_mode: "on_focus"
                password: True
                line_color_focus: 'white'
                line_color_normal: '#d7d9d7'
                text_color_normal: '#d7d9d7'
                text_color_focus: 'white'
                hint_text_color_focus: 'white'
                hint_text_color_normal: '#d7d9d7'
                icon_left_color_focus: 'white'
                icon_left_color_normal: '#d7d9d7'


            FloatLayout:
                
                # for indication when passward enter passward wrord
                MDLabel:
                    id: incorrect
                    text: ""
                    font_size: "16"
                    pos_hint: {'x': 0.1, "y": .42}
                    theme_text_color: "Custom"
                    text_color: "red"
                    adaptive_size: True
                    # md_bg_color: 'green'

                # Login button 
                MDFlatButton:
                    text: "[b]Login[/b]"
                    size_hint: None, None
                    size: dp(120), dp(50)
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Center align
                    md_bg_color: "white"  # white color
                    theme_text_color: "Custom"
                    text_color: 'black'  # black
                    on_release: root.get_login_values()

                # forget buttong
                MDFlatButton:
                    text: "[b]Forget[/b]"
                    size_hint: None, None
                    size: dp(120), dp(50)
                    pos_hint: {"right": 1, "center_y": 0.8}  # Right align
                    theme_text_color: "Custom"
                    text_color: [1, 1, 1, 1]  # نیلا متن
                    on_release:
                        app.root.current = "forget_page"        
                        root.manager.transition.direction = 'left'
            MDLabel:
                text: "                     "
                adaptive_height: True
                halign: "center"
                theme_text_color: "Custom"
                text_color: "white"

            MDLabel:
                text: "---------- Or ----------"
                adaptive_height: True
                halign: "center"
                theme_text_color: "Custom"
                text_color: "grey"



            MDFlatButton:
                text: "Sign up"
                pos_hint: {'center_x': 0.5}
                theme_text_color: "Custom"
                text_color: "white"
                on_release: 
                    app.root.current = "sign_up"
                    root.manager.transition.direction = 'down'

        
    MDFloatLayout:
        # md_bg_color: 'green'
        size_hint: 0.6, None
        height: 90
        padding: 90
        pos_hint: {'center_x': 0.5}
        
        MDIconButton:
            icon: 'facebook'
            size_hint: None,None
            height: 60
            width: 60
            md_bg_color: 'grey'
            pos_hint: {'center_x': 1.0,'center_y': 1}

        MDIconButton:
            icon: 'school'
            size_hint: None,None
